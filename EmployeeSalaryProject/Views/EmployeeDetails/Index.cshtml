@model IEnumerable<EmployeeSalaryProject.Models.Employee>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="EmployeeDetails" asp-action="Create" class="btn btn-primary">Add New Employee</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Emp ID
                    </th>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Working Hours
                    </th>
                    <th>
                        Gross Salary
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td width="10%">@employee.EmpID</td>
                        <td width="20%">@employee.FirstName  @employee.LastName</td>
                        <td width="15%">@employee.Age</td>
                        <td width="15%">@employee.WorkingHours</td>
                        <td width="20%">@employee.GrossSalary</td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="EmployeeDetails" asp-action="Update" asp-route-Id="@employee.EmpID" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="EmployeeDetails" asp-action="Details" asp-route-Id="@employee.EmpID" class="btn btn-primary mx-1">Details</a>
                                <a asp-controller="EmployeeDetails" asp-action="Delete" asp-route-Id="@employee.EmpID" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @using (Html.BeginForm("ExportToCSV", "EmployeeDetails", FormMethod.Post))
        {
            <input type="submit" id="btnSubmit" value="Export" />
        }
    }
    else
    {
        <p>There is no Employee Details available at the moment!</p>
    }
</div>

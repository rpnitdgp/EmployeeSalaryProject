@model EmployeeSalaryProject.Models.EmployeeSalary

<form method="post" asp-action="Update">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Employee Salary</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="EmpID"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="NetSalary"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="IncomeTax"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="PensionAmount"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="LabourTaxCredit"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="EmpID" disabled class="form-control" />
                        <span asp-validation-for="EmpID" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="NetSalary" disabled class="form-control" />
                        <span asp-validation-for="NetSalary" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="IncomeTax" disabled class="form-control" />
                        <span asp-validation-for="IncomeTax" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="PensionAmount" disabled class="form-control" />
                        <span asp-validation-for="PensionAmount" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="LabourTaxCredit" disabled class="form-control" />
                        <span asp-validation-for="LabourTaxCredit" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <p>
                        Salary Components have been updated with above data!
                    </p>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <a asp-action="Index" asp-controller="EmployeeDetails" class="btn btn-success w-75">Home</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


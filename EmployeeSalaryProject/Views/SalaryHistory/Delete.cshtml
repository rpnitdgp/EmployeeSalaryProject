@model EmployeeSalaryProject.Models.SalaryHistory

<form method="post" asp-action="DeletePost">
    <input asp-for="SalaryID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Salary History</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="EmpID"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Month"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Year"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="SalaryAmount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="EmpID" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Month" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Year" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="SalaryAmount" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
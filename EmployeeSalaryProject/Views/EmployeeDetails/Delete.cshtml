@model EmployeeSalaryProject.Models.Employee

<form method="post" asp-action="DeletePost">
    <input asp-for="EmpID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Employee</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="DateOfBirth"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="WorkingHours"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="GrossSalary"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="FirstName" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="LastName" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="DateOfBirth" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="WorkingHours" disabled class="form-control" />
                    </div>
                    <div class="col-2">
                        <input asp-for="GrossSalary" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>